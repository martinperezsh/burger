<div class="container">
	<div class="row">
		<div class="col-lg-5 col-lg-offset-4">
			<img src="/assets/images/burger.png" id="image">
		</div>
	</div>
	
	<div class="row">
		<div class="col-lg-12">
			<h1>Eat Da Burger!!</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-7">
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
					<div class="well">
						<h2>{{this.id}}. {{this.burger_name}}</h2>
					</div>

					<form method="POST" action="/burgers/{{this.id}}?_method=PUT" class="button-size">
            			<input input type="hidden" type="text" name="devoured" value="true"><br>
            			<button type="submit" class="btn btn-default">Devour it!</button>
          			</form>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-lg-5">
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
					<div class="well" id="devoured">
						<h2>{{this.id}}. {{this.burger_name}}</h2>
					</div>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>




</div>

