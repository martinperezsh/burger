<div class="container">
	<div class="row">
		<div class="col-lg-5 col-lg-offset-4">
			<img src="/assets/images/burger.png" id="image">
		</div>
	</div>
	
	<div class="row">
		<div class="col-lg-12">
			<h1>Eat Da Burger!!</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-7">
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
					<div class="well col-lg-9">
						<h2>{{this.id}}. {{this.burger_name}}</h2>
					</div>

					<div class="col-lg-3">
						<form method="POST" action="/burgers/{{this.id}}?_method=PUT" class="button-size">
	            			<input input type="hidden" type="text" name="devoured" value="true"><br>
	            			<button type="submit" class="btn btn-default">Devour it!</button>
	          			</form>
					</div>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-lg-5">
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
					<div class="well" id="devoured">
						<h2>{{this.id}}. {{this.burger_name}}</h2>
					</div>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-4 col-lg-offset-4">
    		<h2>Create Your Own Burger!</h2>
    		<form class="create-form" action="/burgers/new" method="POST">


    		<div class="form-group">
        		<input type="text" id="newBurger" name="name">
    		</div>
    		<button id="createButton" class="btn btn-default" type="submit">Submit Your Burger!</button>
    		</form>
		</div>
	</div>


</div>

